# =============================
# BitProX Exchange Environment Variables Template
# =============================
# Copy this file to .env and update with your actual values
# DO NOT commit .env files to version control

# =============================
# COMMON SETTINGS
# =============================
NODE_ENV=development

# =============================
# DATABASE
# =============================
DATABASE_URL=postgresql://bitprox:bitprox_dev_password@localhost:5432/bitprox_exchange
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=bitprox
DATABASE_PASSWORD=bitprox_dev_password
DATABASE_NAME=bitprox_exchange

# =============================
# REDIS
# =============================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================
# JWT AUTHENTICATION
# =============================
# IMPORTANT: Change these in production!
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =============================
# AUTH SERVICE (Port: 4001)
# =============================
AUTH_SERVICE_PORT=4001
AUTH_SERVICE_HOST=localhost

# =============================
# BALANCE SERVICE (Port: 4002)
# =============================
BALANCE_SERVICE_PORT=4002
BALANCE_SERVICE_HOST=localhost

# =============================
# MATCHING ENGINE (Port: 4003)
# =============================
MATCHING_ENGINE_PORT=4003
MATCHING_ENGINE_HOST=localhost

# =============================
# MARKET DATA SERVICE (Port: 4004)
# =============================
MARKET_DATA_SERVICE_PORT=4004
MARKET_DATA_SERVICE_HOST=localhost

# =============================
# WALLET SERVICE (Port: 4005)
# =============================
WALLET_SERVICE_PORT=4005
WALLET_SERVICE_HOST=localhost

# =============================
# ADMIN SERVICE (Port: 4006)
# =============================
ADMIN_SERVICE_PORT=4006
ADMIN_SERVICE_HOST=localhost

# =============================
# API GATEWAY (Port: 4000)
# =============================
API_GATEWAY_PORT=4000
API_GATEWAY_HOST=localhost

# Service URLs for Gateway
AUTH_SERVICE_URL=http://localhost:4001
BALANCE_SERVICE_URL=http://localhost:4002
MATCHING_ENGINE_URL=http://localhost:4003
MARKET_DATA_SERVICE_URL=http://localhost:4004
WALLET_SERVICE_URL=http://localhost:4005
ADMIN_SERVICE_URL=http://localhost:4006

# =============================
# FRONTEND
# =============================
# Web Frontend (Port: 3000)
REACT_APP_API_URL=http://localhost:4000
REACT_APP_WS_URL=ws://localhost:4000

# Admin Frontend (Port: 3001)
REACT_APP_ADMIN_API_URL=http://localhost:4000

# =============================
# BLOCKCHAIN SETTINGS (For Wallet Service)
# =============================
# Bitcoin
BTC_NODE_URL=
BTC_NETWORK=testnet

# Ethereum
ETH_NODE_URL=
ETH_NETWORK=goerli
ETH_CHAIN_ID=5

# TRON (Optional)
TRON_NODE_URL=
TRON_NETWORK=shasta

# =============================
# SECURITY
# =============================
# CORS Settings
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================
# LOGGING
# =============================
LOG_LEVEL=info
LOG_FORMAT=json

# =============================
# EMAIL (Optional - for notifications)
# =============================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@bitprox.exchange

# =============================
# MONITORING (Optional)
# =============================
# Sentry Error Tracking
SENTRY_DSN=

# New Relic APM
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME=bitprox-exchange

# =============================
# PRODUCTION OVERRIDES
# =============================
# In production, override these with secure values:
# - Change all passwords and secrets
# - Use production database credentials
# - Enable SSL/TLS
# - Set up proper CORS origins
# - Configure production blockchain nodes
# - Enable monitoring and logging services